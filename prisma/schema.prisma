// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Madamis {
  id    Int    @id @default(autoincrement())
  title String
  link  String @unique

  games Games[]
}

model Games {
  id   Int      @id @default(autoincrement())
  date DateTime

  madamis   Madamis? @relation(fields: [madamisId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  madamisId Int

  gameUsers GameUsers[]
}

model Users {
  id    Int    @id @default(autoincrement())
  name  String
  color String

  gameUsers GameUsers[]
}

model GameUsers {
  id Int @id @default(autoincrement())

  Games   Games? @relation(fields: [gamesId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  gamesId Int?
  Users   Users? @relation(fields: [usersId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  usersId Int?
}
